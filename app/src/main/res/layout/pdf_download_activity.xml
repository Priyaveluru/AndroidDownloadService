<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smartapps.androidservices.MainActivity">

    <TextView
        android:text="PDF Download Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="22dp"
        android:id="@+id/textView3"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="PDF2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:id="@+id/textView6"
        android:textStyle="normal|bold"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:background="#C0C0C0"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/pdf1"
        android:layout_alignStart="@+id/pdf1"
        android:id="@+id/pdf2"
        android:textColor="#000000"
        android:text="http://www.cisco.com/c/dam/en_us/about/ac79/docs/innov/IoE_Economy.pdf" />

    <TextView
        android:text="PDF3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/textView7"
        android:textStyle="normal|bold"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_below="@+id/pdf2"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:background="#C0C0C0"
        android:ems="10"
        android:id="@+id/pdf3"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="http://www.cisco.com/c/dam/en_us/solutions/industries/docs/gov/everything-for-cities.pdf" />

    <TextView
        android:text="PDF4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/textView8"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/pdf3"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="#C0C0C0"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/pdf4"
        android:text="http://www.cisco.com/web/offer/gist_ty2_asset/Cisco_2014_ASR.pdf" />

    <TextView
        android:text="PDF5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/textView9"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/pdf4"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <Button
        android:text="Start Downlaod"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/downloadxyz"
        android:textColor="#FFFFFF"
        android:background="#008000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:background="#C0C0C0"
        android:ems="10"
        android:id="@+id/pdf5"
        android:text="http://www.cisco.com/web/offer/emear/38586/images/Presentations/P3.pdf"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:background="#C0C0C0"
        android:ems="10"
        android:id="@+id/pdf1"
        android:text="http://www.cisco.com/c/dam/en_us/about/annual-report/2016-annual-report-full.pdf"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="PDF1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textStyle="normal|bold"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/pdf1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Please provide list of five SJSU PDFs to download *hardcode of files is file! or you can provide full qualified names   "
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:id="@+id/textView4"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>